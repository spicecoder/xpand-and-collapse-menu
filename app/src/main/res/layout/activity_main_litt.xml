<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/reddot"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tab_2red"/>
    <View android:layout_height="0dp"
          android:layout_width ="match_parent"
          android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


            <com.fangxu.allangleexpandablebutton.AllAngleExpandableButton
                android:id="@+id/button_expandable_0_180"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:aebAnimDurationMillis="175"
                app:aebButtonElevation="4dp"
                app:aebButtonGapDp="55dp"
                app:aebEndAngleDegree="175"
                app:aebIsSelectionMode="false"
                app:aebMainButtonSizeDp="75dp"
                app:aebRippleEffect="true"
                app:aebStartAngleDegree="5"
                app:aebSubButtonSizeDp="65dp"/>


    </RelativeLayout>

</LinearLayout>